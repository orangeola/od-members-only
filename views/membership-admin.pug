extends layout

block content
  h1 #{title}

  h2 Enter the correct password to become a member!
  form(method='POST' action='/member-login')
    div.form-group
      p
        label(for='memberpass') Secret Password:
        input#name.form-control(type='text', name='memberpass')
    br
    button.btn.btn-primary(type='submit') Submit

  if member_errors
   ul
    for error in member_errors
     li!= error.msg

  hr

  h2 Enter the correct password to become an admin!
  form(method='POST' action='/admin-login')
    div.form-group
      p
        label(for='adminpass') Secret Password:
        input#name.form-control(type='text', name='adminpass')
    br
    button.btn.btn-primary(type='submit') Submit

  if admin_errors
   ul
    for error in admin_errors
     li!= error.msg

  br
  br
  a(href="/") Home