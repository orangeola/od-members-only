extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      p
        label(for='title') Title:
        input#name.form-control(type='text', name='title')
      
      p
        label(for='message') Message:
        input#name.form-control(type='text', name='message')

    br
    button.btn.btn-primary(type='submit') Submit

  if errors
   ul
    for error in errors
     li!= error.msg

  br
  br
  a(href="/") Home
